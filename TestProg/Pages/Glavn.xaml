                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <Button Margin="15,5,15,0"
                        Height="95"
                        Width="95"
                        Background="Transparent"
                        BorderBrush="Transparent">
                        <StackPanel>
                            <Image Source="/Resurs/HTML_1.png" 
                               Height="90"
                               Width="90"/>
                        </StackPanel>
                    </Button>
                    <TextBlock Text="Тест 1"
                               HorizontalAlignment="Center"
                               FontSize="18"
                               FontFamily="Montserrat"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            VerticalAlignment="Center"
